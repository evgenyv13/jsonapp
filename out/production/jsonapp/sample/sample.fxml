                  <ToggleGroup fx:id="operationSystem" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="radioL" layoutX="14.0" layoutY="255.0" mnemonicParsing="false" text="Linux" toggleGroup="$operationSystem" />
            </children>
        </Pane>
    </children>
</GridPane>
