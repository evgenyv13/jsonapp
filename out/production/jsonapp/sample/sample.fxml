    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane maxHeight="300.0" maxWidth="600.0" minHeight="300.0" minWidth="600.0" prefHeight="300.0" prefWidth="600.0">
            <children>
                <Button fx:id="btninputChooseDb" layoutX="24.0" layoutY="27.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="178.0" text="Select DataBase" />
                <Label fx:id="labelDBFilePath" layoutX="24.0" layoutY="65.0" prefHeight="21.0" prefWidth="412.0" text="DB file: " />
                <Button fx:id="btnOutputFile" layoutX="24.0" layoutY="112.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="178.0" text="Select output file" />
                <Label fx:id="labelOutputFile" layoutX="24.0" layoutY="157.0" prefHeight="21.0" prefWidth="412.0" text="Output file: " />
